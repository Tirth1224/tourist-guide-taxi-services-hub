<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile Dashboard</title>
    <link rel="stylesheet" href="/css/userservice.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>

    <div class="sidebar">
        <!-- Home Icon -->
        <div class="home-icon">
            <a href="/index"><img src="img/dashboard/ion_home.PNG" alt=""></a>
            <img src="img/capture.PNG" alt="">
        </div>
        <!-- User Image and Name -->
        <div class="part-1">
            <div class="user-image">
                <% if(user && user.profile_image) { %>
                    <img src="<%= user.profile_image %>" alt="User Image">
                    <% } else { %>
                        <img src="img/image1.jpg" alt="Default Profile Image">
                        <% } %>
            </div>
            <div class="user-name">
                <p>
                    <%= user ? user.name : 'Guest' %>
                </p>
            </div>
        </div>
        <div class="sidebar-menu">
            <ul>
                <li><a href="/userprofile">Profile</a></li>
                <hr>
                <li><a href="/userchangepassword">Password</a></li>
                <hr>
                <li><a href="/userservice">Service</a></li>
                <hr>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </div>
    </div>

    <div class="main-content">
        <!-- Profile card content remains unchanged -->

        <!-- New section for booked services -->
        <div class="service-dashboard">
            <div class="section-heading">Booked Services</div>
            <div class="service-list">
                <% if (services && services.length> 0) { %>
                    <% services.forEach(function(service) { %>
                        <div class="service-item">
                            <div class="service-info">
                                <p><strong>Service:</strong>
                                    <%= service.serviceName %>
                                </p>
                                <p><strong>Worker Name:</strong>
                                    <%= service.workerName %>
                                </p>
                                <p><strong>Worker Mobile:</strong>
                                    <%= service.workerMobile %>
                                </p>
                                <p><strong>Status:</strong>
                                    <%= service.status %>
                                </p>
                            </div>
                            <% if (service.status==='pending' ) { %>
                                <button class="cancel-service-button">Cancel</button>
                                <% } %>
                        </div>
                        <% }); %>
                            <% } else { %>
                                <!-- <p>No booked services found.</p> -->
                                <% } %>
            </div>
        </div>
    </div>

    <script src="/js/userservice.js"></script> <!-- JavaScript file -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>