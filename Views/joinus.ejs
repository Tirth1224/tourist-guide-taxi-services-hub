<body>
    <%- include('navbar') %>
        <div class="container">
            <div id="myCarousel" class="carousel slide mb-6" data-bs-ride="carousel">
                <div class=" carousel-indicators">
                    <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active"
                        aria-current="true"></button>
                    <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2"
                        class="" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3"
                        class=""></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="img/C1.PNG" alt="" height="825px" width="1290px" class="d-block w-100"
                            style="border-radius: 57px;">
                        <div class="container">
                            <div class="carousel-caption text-center top-caption">
                                <h1>Example headline.</h1>
                                <p class="opacity-75">Some representative placeholder content for the first slide of the
                                    carousel.</p>

                            </div>
                        </div>
                    </div>
                    <div class="carousel-item ">
                        <img src="img/c2.PNG" alt="" height="825px" width="1290px" class="d-block w-100"
                            style="border-radius: 57px;">
                        <div class="container">
                            <div class="carousel-caption text-center top-caption">
                                <h1>Another example headline.</h1>
                                <p>Some representative placeholder content for the second slide of the carousel.</p>

