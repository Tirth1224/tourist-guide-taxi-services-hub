<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/admindashboard.css">
    <style>
        .home-icon {
            width: 40px;
            /* Adjust size as needed */
            height: 40px;
        }

        .guide-wheels-logo {
            width: 230px;
            /* Adjust size as needed */
            height: 70px;
            border-radius: 24px;
            border: 1px solid #B8B8FF;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="sidebar-sticky">
                    <div class="text-center my-4">
                        <div class="inline-images">
                            <a href="/index"><img src="/img/dashboard/ion_home.PNG" alt="Home"
                                    class="img-fluid home-icon"></a>
                            <img src="/img/capture.PNG" alt="Guide Wheels" class="img-fluid mt-2 guide-wheels-logo">
                        </div>
                    </div>
                    <div class="profile-section text-center">
                        <img src="/img/image1.jpg" alt="Default Profile Image" class="img-fluid rounded-circle mb-2"
                            style="width: 80px;">
                        <h4>Admin</h4>
                    </div>
                    <ul class="nav flex-column mt-4">
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/users">
                                <i class="fas fa-users"></i>
                                Users
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/guides">
                                <i class="fas fa-user-tie"></i>
                                Guides
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/taxi-drivers">
                                <i class="fas fa-taxi"></i>
                                Taxi Drivers
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <h1 class="h2 mt-4">Admin Dashboard</h1>
                <% if (data && data.length> 0) { %>
                    <div class="table-responsive mt-4">
                        <table class="table table-striped table-bordered">
                            <thead class="thead-dark">
                                <tr>
                                    <% Object.keys(data[0]).forEach(key=> { %>
                                        <th>
                                            <%= key %>
                                        </th>
                                        <% }); %>
                                </tr>
                            </thead>
                            <tbody>
                                <% data.forEach(row=> { %>
                                    <tr>
                                        <% Object.values(row).forEach(value=> { %>
                                            <td>
                                                <%= value %>
                                            </td>
                                            <% }); %>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                        <p class="mt-4">No data available</p>
                        <% } %>
            </main>
        </div>
    </div>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>